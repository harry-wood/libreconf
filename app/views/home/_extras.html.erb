          <li class="list-group-item"><b><%=t :sponsors_international %></b>:  Henk Hoff</li>
          <li class="list-group-item"><b><%=t :sponsors_southamerica %></b>:  Melody Atienza, Mailen Soria</li>
        <ul>
      </div>

      <div class="col-sm-4 col-xs-12 same-height">
        
        <h3><%=t :get_in_touch %></h3>


            <form class="form-horizontal">
              <fieldset>
              <!-- Text input-->
              <div class="form-group">
                <label class="col-md-3 control-label" for="name"><%=t :name %></label>  
                <div class="col-md-8">
                <input id="name" name="name" placeholder="<%=t :name_placeholder %>" class="form-control input-sm" required="" type="text">
                  
                </div>
              </div>

              <!-- Text input-->
              <div class="form-group">
                <label class="col-md-3 control-label" for="email">E-mail</label>  
                <div class="col-md-8">
                <input id="email" name="email" placeholder="<%=t :email_placeholder %>" class="form-control input-sm" required="" type="text">
                <span class="help-block text-danger"><%=t :email_tip %></span>  
                </div>
              </div>

              <!-- Select Basic -->
              <div class="form-group">
                <label class="col-md-3 control-label" for="subject"><%=t :subject %></label>
                <div class="col-md-8">
                  <select id="subject" name="subject" class="input-sm form-control">
                    <option value="suggestion"><%=t :suggestion %></option>
                    <option value="comment"><%=t :comment %></option>
                    <option value="urgency"><%=t :urgent_issue %></option>
                    <option value="question"><%=t :question %></option>
                  </select>
                </div>
              </div>

              <!-- Textarea -->
              <div class="form-group">
                <label class="col-md-3 control-label" for="message"><%=t :message %></label>
                <div class="col-md-8">                     
                  <textarea class="form-control" required="" style="width:99%" id="message" name="message"></textarea>
                </div>
              </div>

              <!-- Button -->
              <div class="form-group">
                <label class="col-md-3 control-label" for="submit"></label>
                <div class="col-md-8">
                  <button id="submit" name="submit" class="btn btn-info"><%=t :submit %></button>
                </div>
              </div>

              </fieldset>
              </form>

        <ul class="list-group">
          <li class="list-group-item">
            <ul class="">
              <li><b>Twitter</b>: <a href="https://twitter.com/sotm" target="_blank">@sotm</a></li>
              <li><b>IRC</b>: #sotm @OFTC</li>
              <li><b>E-mail</b>: info@stateofthemap.org</li>
            </ul>
          </li>
        </ul> 

      </div>
      
      <div class="col-sm-4 col-xs-12 same-height" style="background: rgba(240, 240, 240, 0.75)">
        <h3><%=t :isologo %></h3>
